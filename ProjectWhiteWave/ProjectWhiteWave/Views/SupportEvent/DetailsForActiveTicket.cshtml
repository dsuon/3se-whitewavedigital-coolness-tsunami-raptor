@model ProjectWhiteWave.Models.SupportEvent

@{
    ViewBag.Title = "Details";
}

@Html.Partial("~/Views/SupportEvent/_DetailsPartial.cshtml", Model)

<p>
    @Html.ActionLink("Edit", "EditForActiveTicket", new { id = Model.SupportEventId }, null) |
    @Html.ActionLink("Back to Ticket", "ActiveTicketDetails", "Ticket", new { id = Model.TicketId }, null)
</p>
<div style="height: 5px;"></div>
<div>
    <h4>Technicians</h4>
    @* @Html.ActionLink("Create New", "Create", "SupportEvent", new { ticketId = Model.TicketId }, null) *@
    @if (Model.Employees.Count != 0)
    {
        <div>
            <table class="table">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th></th>
                </tr>
                @foreach (var e in Model.Employees)
                {
                    <tr>
                        <td>@e.FirstName</td>
                        <td>@e.LastName</td>
                        <td>
                            @Html.ActionLink("Details", "Details", "Employee", new { id = e.Id }, null)
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
    else
    {
        <hr />
        <p>There are no technicians for this support event.</p>
    }
</div>
